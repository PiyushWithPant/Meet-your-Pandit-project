<% layout('./boilerplate.ejs')%>

    <!-- Adding star review -->
    <link rel="stylesheet" href="/stylesheets/stars.css">

    <style>
        body {
            background-image: linear-gradient(to right, red, yellow);
            color: rgb(44, 11, 11);
        }

        .card {
            background-color: rgba(255, 0, 0, 0.204);
        }
    </style>

    <div class="container">


        <div class="card mt-5 mb-5 ">
            <div class="row">
                <div class="col-md-4">
                    <img style="max-width: 350px; height: 400px;" src="<%=pandit.image[0].url%>"
                        class="img-fluid rounded-start" alt="Pandit Image">
                </div>
                <div class="col-md-8 ">
                    <div class="card-body p-5">
                        <h1 class="card-title mb-3">
                            <%=pandit.name%>
                        </h1>


                        <h5 class="card-text mb-3"> <i> <b>
                                    <%= pandit.yrsOfExp %>
                                </b> years of experience </i></h5>
                        <div class="mb-5 card-text">
                            <i class="fa-solid fa-location-dot"></i>
                            <i>
                                <%= pandit.location %>, India
                            </i>
                        </div>



                    </div>
                </div>
            </div>
        </div>

        <div class="mb-3 card shadow p-5 mb-5">
            <i>
                <h2 class="mb-4"
                    style="color:rgb(255, 242, 0) ;font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
                    Poojas i perform:
                </h2>
            </i>

            <ul class="list-group">
                <% for(let pooja in pandit.poojas) {%>
                    <li style="background-color: rgb(255, 213, 0);" class="list-group-item mb-3 ">
                        <b>
                            <%= pandit.poojas[pooja] %>
                        </b>
                    </li>
                    <% } %>
            </ul>
        </div>


        <div style="font-family: monospace; " class="mb-5 card p-5">
            <h4 style="color:rgb(255, 242, 1)" class="mb-4">To further contact <%= pandit.name %> for
                    your pooja,
                    Please proceed with
                    the below details
            </h4>

            <h5>Email me at <b class="text-white">
                    <%= pandit.email %>
                </b></h5>
            <h5 class="mb-3">My contact number : <b class="text-white">
                    <%= pandit.contact %>
                </b></h5>
        </div>



        <div class="mb-5 card p-5">

            <h1 style="color:yellow" class="text-center">Review</h1>

            <div class="mb-3">

                <form action="/" method="post">


                    <label class="form-label text-white mb-4" for="body">
                        <h5><i> <b>Leave a review! </b></i> </h5>
                    </label>

                    <div>
                        <fieldset class="starability-basic">
                            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                checked aria-label="No rating." />
                            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                            <label for="first-rate1" title="Terrible">1 star</label>
                            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                            <label for="first-rate2" title="Not good">2 stars</label>
                            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                            <label for="first-rate3" title="Average">3 stars</label>
                            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                            <label for="first-rate4" title="Very good">4 stars</label>
                            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                            <label for="first-rate5" title="Amazing">5 stars</label>
                        </fieldset>
                    </div>


                    <div class="mb-3">

                        <textarea style="background-color: yellow;" class="form-control" name="review" id="body"
                            cols="30" rows="3" required></textarea>

                    </div>

                    <button style="background-color:rgb(255, 140, 0)" class="btn mb-3" type="submit">Submit</button>

                </form>

                <div class="mb-5">
                    <h5 class="form-label text-white mb-4 mt-5" for="body">
                        <i> <b>Review by other people ~ </b></i>
                    </h5>
                </div>
            </div>

        </div>

    </div>