                <form method="post" action="/api/v1/auth/pandit/register" enctype="multipart/form-data">

                    <div class="mb-3 text-white">
                        <label for="exampleInput" class="form-label">Name</label>
                        <input placeholder="Your name as in verification document" required name="name" type="text"
